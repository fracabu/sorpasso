// tsconfig.app.json
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    // 1) alias @ â†’ src
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // 3) tipi per import.meta.env
    "types": ["vite/client"]
  },
  // 2) includi .ts, .d.ts e .vue in src
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ]
}
